@model despatch.Domain.Models.RazorModels.ForgotPasswordView
<head type="text/css">
    <style>
        p {
            font-family: Roboto;
            font-style: normal;
            font-weight: normal;
            font-size: 13.5pt;
            -webkit-box-align: end;
            align-items: flex-end;
            color: #5b6779;
        }
    </style>
</head>

<body style="width: 515px; margin: auto;">
    <div style="background: #3880ff; width: 100%; height: 20px;"></div>

    <div>
        <p>Dear @Model.UserName</p>
        <p>
            We have received a request to reset your password for the Despatch simulation app. If you did not make this
            request, please ignore this email. Otherwise, you can reset your password by clicking the button below.
        </p>
    </div>
    <div style="text-align: center; margin: 40px 0px;">
        <a style="
        background-color: #3880ff;
    	color: white;
    	padding: 1em 204px  1em 188.76px;
    	position: relative;
    	text-decoration: none;
    	text-transform: uppercase;" href='@Model.Link'>Reset password</a>
    </div>
    <div style="border-bottom: 1px solid #dee2e6;">
        <p>Thanks,</p>
        <p>The Despatch Team</p>
    </div>

    <div style="margin:20px 0px; text-align: center;">
        <p>Sent from Despatch HQ
    </div>
    <div style="background: #3880ff;width: 100%;height: 20px;"></div>
</body>